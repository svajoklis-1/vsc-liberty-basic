{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "'"
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        // "blockComment": []
    },
    // symbols used as brackets
    "brackets": [
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        { "open": "(", "close": ")", "notIn": [ "string", "comment" ] },
        { "open": "\"", "close": "\"", "notIn": [ "string", "comment" ] }
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""]
    ],
    "indentationRules": {
        // for, while, sub, function, select case, case
        // "increaseIndentPattern": "(^|.*?:)[ \\t]*(?!(rem|'))(if|for|while|sub|function|select[ \\t]+case|case)[^:]*?$",
        // next, wend, end sub, end function, end select
        // "decreaseIndentPattern": "(^|.*?:)[ \\t]*(?!(rem|'))(end[ \\t]+if|next|wend|end[ \\t]+sub|end[ \\t]+function|end[ \\t]+select)[^:]*?$"
    }
}
